{
  "name": "sideo",
  "version": "0.1.0",
  "description": "Open-source screen and audio recording application for Windows 11",
  "main": "dist/main.js",
  "homepage": ".",
  "author": "Sideo Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:watch": "npm run build:renderer && npm run build:main -- --watch",
    "electron:dev": "wait-on dist/main.js && electron .",
    "electron:pack": "npm run build && node -e \"require('child_process').execSync('create-portable.bat', {stdio: 'inherit'})\"",
    "electron:pack-builder": "npm run build && electron-builder --config.win.sign=null --config.forceCodeSigning=false",
    "electron:dist": "npm run build && electron-builder",
    "pack:win": "npm run check:build && npm run build && electron-builder --win",
    "pack:portable": "npm run check:build && npm run build && electron-builder --win zip",
    "pack:installer": "npm run check:build && npm run build && electron-builder --win nsis",
    "pack:all": "npm run check:build && npm run build && electron-builder --win --x64",
    "check:build": "node scripts/check-build-requirements.js",
    "build:release": "node scripts/build-release.js",
    "build:release:installer": "node scripts/build-release.js installer",
    "build:release:portable": "node scripts/build-release.js portable",
    "dev": "vite",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/postcss": "^4.1.12",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.542.0",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@vitejs/plugin-react": "^4.0.4",
    "concurrently": "^8.2.1",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "eslint": "^8.49.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-electron": "^0.14.1",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.sideo.app",
    "productName": "Sideo",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "assets/licenses/**/*",
      "package.json",
      "!assets/ffmpeg/download-ffmpeg.bat",
      "!assets/**/*.readme"
    ],
    "extraResources": [
      {
        "from": "assets/ffmpeg/ffmpeg.exe",
        "to": "ffmpeg.exe",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false,
      "signDlls": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sideo"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "forceCodeSigning": false,
    "afterSign": null
  }
}
